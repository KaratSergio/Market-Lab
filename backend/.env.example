# ======== Application ==============
PORT=9022
NODE_ENV=development
GLOBAL_PREFIX=api
FRONTEND_URL=http://localhost:3000

# ======== MongoDB ============
MONGO_URI=your-mongodb-connection-string

# ======== PostgreSQL (Neon) =============
DB_TYPE=postgres
DB_HOST=your-neon-database-host
DB_PORT=5432
DB_USER=your-database-username
DB_PASS=your-database-password
DB_NAME=your-database-name

# ======== Authentication =============
JWT_SECRET=your-super-secret-jwt-key

# ======== Mail Service =============
SENDINBLUE_KEY=your-sendinblue-api-key

# ======== Google OAuth =============
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/google/callback

# ======== Cloudflare R2 =============
S3_ENDPOINT=your-r2-endpoint-url
S3_ACCESS_KEY=your-r2-access-key
S3_SECRET_KEY=your-r2-secret-key
S3_BUCKET=your-bucket-name
S3_PUBLIC_URL=your-public-storage-url

# ======== Swagger =============
SWAGGER_TITLE=E-Commerce API
SWAGGER_DESCRIPTION=Complete E-Commerce system with authentication, products, orders and payments
SWAGGER_PATH=api/docs
SWAGGER_SITE_TITLE=E-Commerce API Docs
ENABLE_SWAGGER=true
API_VERSION=1.0.0